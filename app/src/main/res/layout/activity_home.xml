<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="latte.kr.com.project47seconds.HomeActivity">
    <RelativeLayout
        android:id="@+id/rl_home_main"
        android:layout_width="match_parent"
        android:background="@drawable/img_toolbar"
        android:layout_height="56dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:src="@drawable/btn_logo_2"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <latte.kr.com.project47seconds.Library.NonSwipeViewPager
        android:id="@+id/viewpager"
        android:layout_marginTop="56dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:background="@color/white"
        android:paddingTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        app:layout_anchor="@id/viewpager"
        app:layout_anchorGravity="bottom" />

</android.support.design.widget.CoordinatorLayout>
