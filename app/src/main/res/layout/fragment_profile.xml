<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="latte.kr.com.project47seconds.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_height="300dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/graph_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:src="@drawable/btn_account"/>
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="내 계정" />
        <TextView
            android:id="@+id/tv_profile_username"
            android:layout_weight="1"
            android:textColor="@color/tealish"
            android:layout_width="wrap_content"
            android:layout_marginRight="26dp"
            android:layout_height="wrap_content"
            android:text="여은여은" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:src="@drawable/btn_keyout"/>

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="당신의 뉴스 키워드 " />



    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_push"/>

    <TextView
        android:layout_width="wrap_content"
        android:paddingLeft="16dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:text="푸시 알림 설정" />

        <Switch
            android:id="@+id/switch_profile_push"
            android:layout_width="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="26dp"
            android:layout_height="wrap_content" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_phone"/>

        <TextView
        android:layout_width="wrap_content"
        android:paddingLeft="16dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:text="앱정보" />
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:textColor="@color/tealish"
        android:paddingRight="16dp"
        android:layout_height="wrap_content"
        android:text="현재  v1.0" />

        <TextView
            android:textColor="@color/tealish"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:text="최신  v1.0" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">

    <ImageView
        android:layout_marginLeft="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_logout"/>

    <TextView
        android:layout_width="wrap_content"
        android:paddingLeft="16dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:text="로그아웃" />


</LinearLayout>

</LinearLayout>
