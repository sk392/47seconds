<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="latte.kr.com.project47seconds.ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/img_toolbar"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_logo_2"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_height="250dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/graph_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:src="@drawable/btn_account"/>
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="내 계정" />
        <TextView
            android:id="@+id/tv_profile_username"
            android:layout_weight="1"
            android:textColor="@color/tealish"
            android:layout_width="wrap_content"
            android:layout_marginRight="26dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="김진웅" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_main_news"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:src="@drawable/btn_keyout"/>

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="뉴스 키워드 변경" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_push"/>

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="푸시 알림 설정" />

        <Switch
            android:id="@+id/switch_profile_push"
            android:layout_width="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="26dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="앱정보" />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:textColor="@color/tealish"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="현재  v1.0" />

        <TextView
            android:textColor="@color/tealish"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_marginRight="26dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="최신  v1.0" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ll_main"
        android:gravity="center"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_logout"/>

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="로그아웃" />


    </LinearLayout>

</LinearLayout>