<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/main_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_todaynews_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="IT/과학"
            android:textColor="@color/tealish"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_todaynews_2"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/dimmed_color"

            android:text="정치"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_todaynews_3"
            android:textStyle="bold"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/dimmed_color"
            android:gravity="center_horizontal"
            android:text="경제"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_todaynews_4"

            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/dimmed_color"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="사회"
            android:textSize="16dp" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_todaynews_main"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="58dp"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
